<?xml version="1.0" encoding="UTF-8"?>

<?import com.controls.playermenu.PlayerMenu?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" styleClass="lightBlue"
         type="GridPane"
         xmlns="http://javafx.com/javafx/8.0.121">
    <children>
        <Button fx:id="btnStart" styleClass="game-button" text="Start the Game"
                GridPane.halignment="CENTER"
                GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets top="99.0"/>
            </GridPane.margin>
        </Button>
        <PlayerMenu fx:id="pmPlayer" alignment="TOP_RIGHT"
                    GridPane.columnIndex="1" GridPane.vgrow="ALWAYS">
            <GridPane.margin>
                <Insets right="40.0"/>
            </GridPane.margin>
        </PlayerMenu>
    </children>
    <rowConstraints>
        <RowConstraints percentHeight="100.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>
    <padding>
        <Insets top="68.0"/>
    </padding>
</fx:root>
